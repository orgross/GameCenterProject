<Window x:Class="gameCenter.Projects.MemoryGame.MemoryGame"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="400" Width="600">
    <Grid>
        <UniformGrid Name="cardGrid" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Card buttons will be added here -->
        </UniformGrid>

        <!-- Restart button in the footer -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="btnRestart" Content="Restart Game" Click="RestartGame_Click" Background="Black" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
