<Window x:Class="gameCenter.Projects.NumberGame.Games.EasyPlusGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gameCenter.Projects.NumberGame.Games"
        mc:Ignorable="d"
        Title="EasyPlusGame" Height="450" Width="800">
    <Grid>
        <Label Content="level: Easy Plus" FontSize="20"/>
        <TextBlock x:Name="Equation" Text="{Binding Description}" Margin="71,106,557,274" FontSize="16"/>

        <Label Content="enter your answer:" Margin="312,65,331,338" FontSize="16"/>
        <TextBox x:Name="Answer" Text="" FontSize="16" Margin="312,101,312,274" />

        <Button x:Name="CheckAnswer" Content="Check" FontSize="16" Margin="535,101,93,274" Click="CheckAnswer_Click" />
        
        <TextBlock x:Name="Response" Margin="535,204,93,181" FontSize="20" Text="{Binding Response}"/>

        <Button x:Name="StopButton" Content="Stop" FontSize="16" Margin="20,362,612,20" Click="StopButton_Click" />

        <Button x:Name="StartOverButton" Content="Start Over" FontSize="16" Margin="20,380,20,20" Click="StartOverButton_Click" Visibility="Collapsed" />

    </Grid>
</Window>
